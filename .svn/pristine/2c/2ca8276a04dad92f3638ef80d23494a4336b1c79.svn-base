/* replace text with icons */

.paginate_button a {
    margin: 0 4px;
}
.pagination > li > a,
.pagination > li > span {
    font-size: 0.875rem;
}
.paginate_button.active a {
    background: #3AB8EF !important;
    border-color: #AAA;
}
.paginate_button.previous > a,
.paginate_button.next > a,
.paginate_button.first > a,
.paginate_button.last > a {
    color: transparent;
    font-size: 0.02px;
    height: 34px;
    width: 34px;
    border-radius: 2px !important;
}
.paginate_button.previous > a:after,
.paginate_button.next > a:after,
.paginate_button.first > a:after,
.paginate_button.last > a:after,
.paginate_button.first > a:before,
.paginate_button.last > a:before {
    content: "";
    display: block;
    float: right;
}
.paginate_button.previous > a:after,
.paginate_button.first > a:after {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 6px 6px 6px 0;
    border-color: transparent #4889d8 transparent transparent;
    margin-top: 4px;
}
.paginate_button.previous > a:after {
    margin-right: 2px
}
.paginate_button.first > a:before {
    border-color: transparent transparent transparent #4889d8;
    border-style: solid;
    border-width: 0 0 0 2px;
    height: 12px;
    margin-left: -10px;
    margin-right: 8px;
    margin-top: 4px;
    width: 1px;
}
.paginate_button.next > a:after,
.paginate_button.last > a:before {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 6px 0 6px 6px;
    border-color: transparent transparent transparent #4889d8;
    margin-top: 4px;
}
.paginate_button.last > a:before {
    margin-left: -6px;
    margin-right: 2px;
}
.paginate_button.last > a:after {
    border-color: transparent transparent transparent #4889d8;
    border-style: solid;
    border-width: 0 0 0 2px;
    height: 12px;
    margin-right: -4px;
    margin-top: 4px;
    width: 1px;
}
