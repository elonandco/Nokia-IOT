.sorting:before,
.sorting:after,
.sorting_asc:after,
.sorting_desc:after {
    content: "";
    display: inline;
    font-family: FontAwesome;
    display: inline-block;
    font-size: 1rem;
    font-weight: normal;
    text-rendering: auto;
    margin-right: -12px;
    float: right;
    text-align: right;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.sorting_asc:after {
    color: #3AB8EF;
    content: "\f0d8";
}
.sorting_desc:after {
    color: #3AB8EF;
    content: "\f0d7";
}
.sorting:after {
    color: #CCC;
    content: "\f0dc";
    font-size: .825rem;
}
