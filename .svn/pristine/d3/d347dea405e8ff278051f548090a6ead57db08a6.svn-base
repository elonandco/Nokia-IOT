<div class="login-container col-md-offset-3 col-md-6 ">
  <h2>Log In</h2>

  <form #f="ngForm" [ngFormModel]="_loginForm" (ngSubmit)="doLogin()" class="form-horizontal col-md-12">
    <div class="form-group">
      <label for="userName" class="col-sm-2 control-label">Username</label>
      <div class="col-sm-8">
        <input id="userName" ngControl="username" type="text" class="form-control" placeholder="Your username">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-8">
        <input id="password" ngControl="password" type="password" class="form-control" placeholder="Your password">
          <div id="help-container" >
            <i class="ko-question-circle password-help" tooltip="If you donâ€™t remember the password, please email our support team at <span><b><a href='mailto:IOT-EnterpriseAdminPortal-Support@nokia.com'>IOT-EnterpriseAdminPortal-Support@nokia.com</a></b></span> to reset your password." tooltipEvent="click" tooltipPosition="top" ></i>
          </div>
        <span *ngIf="_error" class="help-block">Your Username or Password is incorrect. Please Try again </span>
      </div>
    </div>
    <div class="form-group radio">
      <div class="form-radio col-sm-offset-2">
        <label>
          <input type="radio"  name="root" (click)="handleRadioButtonClick('root')" [ngModel]="{checked: isRoot}">
          Root
        </label>
      </div>
    </div>
    <div class="form-group radio">
      <div class="form-radio col-sm-offset-2">
        <label>
          <input type="radio" name="root" (click)="handleRadioButtonClick('subgroup')" [ngModel]="{checked: !isRoot}">
          Sub Group
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit"  class="btn btn-primary col-md-9">Login</button>
      </div>
    </div>
  </form>
</div>
