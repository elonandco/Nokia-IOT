
 .highcharts-yaxis-title {
    fill: #000;
    color: #000;
 }
.widget{
  display: inline-block;
  min-width: 350px;
  height: 341px;
  border-radius: 12px;
  transition: all ease-in-out 0.15s;
  transform-origin: top left;

  .content.refresh{
    background-color: #ccc!important;
    border: 0!important;

    .lg.spinner{
      position: absolute;
      left: 40%;
      top:  40%;
    }
  }

  .content {
    height: 335px;
    margin: 5px;
    background: rgba(224,224,224,.5);
    border-radius: 12px;
    border: solid 1px #f3f3f3;
    padding: 15px 20px;
    -webkit-transition: transform 0.6s, box-shadow 0.2s;
    -webkit-transform-style: preserve-3d;
    -ms-transition: transform 0.6s, box-shadow 0.2s;
    -moz-transition: transform 0.6s, box-shadow 0.2s;
    -moz-transform: perspective(1000px);
    -moz-transform-style: preserve-3d;
    -ms-transform-style: preserve-3d;
    transform-style: preserve-3d;
    position: relative;
    cursor: move;
    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;
  }

  .front-side {
    z-index: 2;
    -webkit-transform: rotateY(0deg);
    -ms-transform: rotateY(0deg);
    display: block;
  }

  .back-side {
    -webkit-transform: rotateY(-180deg);
    -moz-transform: rotateY(-180deg);
    -o-transform: rotateY(-180deg);
    -ms-transform: rotateY(-180deg);
    transform: rotateY(-180deg);
    border: solid 2px #648dff;
    border-radius: 12px;
    display: none;

    .btn-bar {
      position: absolute;
      bottom: 20px;
      right: 20px;
    }
  }

  .flip {
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
    padding: 15px 20px;
  }

  .toolbar {
    overflow: hidden;
    margin-bottom: 10px;
    overflow: hidden;
  }

  .widget-title {
    margin: -2px 0 0 0;
    color: #4185d7;
    float: left;
    font-size: 22px;
    position: relative;
    cursor: pointer;
  }

  .widget-buttons {
    float: right;
    font-size: 23px;
    color: #4185d7;
    line-height: 22px;
    margin: 0 2px;

    .widget-button{
      cursor: pointer;
    }
  }
}

.widget.active{
  .content {
    border: solid 1px #fff;
    background: #fff;
    -webkit-box-shadow: 15px 17px 10px -16px rgba(0, 0, 0, 1);
    -moz-box-shadow: 15px 17px 10px -16px rgba(0, 0, 0, 1);
    box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.7);
  }
}

.widget.hide{
  display: inline-block!important;
  transform: scale(0.0);
  width: 0px;
  min-width: 0px;
}

.widget.show-settings{
  .content {
    transform: rotateY(180deg);
  }

  .back-side {
    display: block;
  }

  .front-side {
    display: none;
  }

}


