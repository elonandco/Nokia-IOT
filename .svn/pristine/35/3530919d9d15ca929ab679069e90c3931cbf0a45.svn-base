<div *ngIf="show" class="sidebar-widgets">
  <div class="drag-widget-container" >
    <h3 class="drag-drop-title">Widgets</h3>
    <div id="sidebarDragulaContainer" class="sidebar-widget-container"  >
      <div *ngFor="let widget of widgetArray" (click)="onWidgetClick($event)" [attr.component]="widget.component"  id="{{widget.id}}"
           class="{{widget.metadata.iconClass}} side-bar-widget"  title="{{widget.metadata.title}}">
      </div>
    </div>
  </div>
